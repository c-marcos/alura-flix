// tsconfig.json (ajustado)
{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true, // Força consistência em nomes de arquivos
    "allowSyntheticDefaultImports": true, // Suporte para importação padrão de módulos comuns
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "node_modules/swiper/types"],
    "paths": {
      "@/*": ["./src/*"],
      "*": ["node_modules/*"]
    }
},
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}

